{
	"mcpServers": {
		"shadcn": {
			"command": "npx",
			"args": ["shadcn@latest", "mcp"]
		},
		"figma-desktop": {
			"type": "http",
			"url": "http://127.0.0.1:3845/mcp"
		},
		"context7": {
			"type": "http",
			"url": "https://mcp.context7.com/mcp"
		},
		"next-devtools": {
			"command": "npx",
			"args": ["-y", "next-devtools-mcp@latest"]
		},
		"vercel": {
			"type": "http",
			"url": "https://mcp.vercel.com/rahul-srirams-projects/karthik-portfolio"
		},
		"sanity": {
			"type": "http",
			"url": "https://mcp.sanity.io",
			"headers": {
				"Authorization": "Bearer ${SANITY_MCP_TOKEN}"
			}
		}
	}
}
